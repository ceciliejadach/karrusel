---
import "../styles/generel.css";
import Newsletter from "./Newsletter.astro";
import SoMeIcons from "./SoMeIcons.astro";
---

<section class="footer">
  <Newsletter />
  <SoMeIcons />
</section>

<style>
  .footer {
    border-top: solid var(---text-color) 3px;
  }

  @media (min-width: 800px) {
    .footer {
      display: flex;
      justify-content: space-between;
      align-items: top;
      padding: 60px 120px 20px 100px;
    }
  }
</style>
