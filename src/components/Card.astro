---
import "../styles/generel.css";
const { data } = Astro.props;
---

<a href=`singleview/${data.slug}`>
  <article>
    <img src={"portraet/" + data.image} alt={"Image of " + data.name} />
    <h3>{data.name + " " + data.land}</h3>
    <p>{data.genre}</p>

    {
      data.artist && (
        <ul>
          {data.artist.map((item) => {
            return <li> {item}</li>;
          })}
        </ul>
      )
    }
  </article>
</a>

<style>
  article {
    width: 300px;
    color: var(---text-color);
    margin: 0 auto 2rem;
    background-color: var(---blue-60);
    height: 250px;
    border-radius: 10px;
  }

  article img {
    border-radius: 10px 10px 0 0;
    height: 180px;
    margin-bottom: 1rem;
  }

  h3 {
    padding-left: 5px;
    font-size: var(--font-size-h3-mobile);
  }
  p {
    padding-left: 5px;
    font-size: var(--font-size-p);
  }
  a {
    text-decoration: none;
  }
</style>
