---
import "../styles/generel.css";
const { variant, navn, email, tlf } = Astro.props;
---

<article class={variant + " "}>
  <h2>{navn}</h2>
  <p>{email}</p>
  <p>{tlf}</p>
</article>

<style>
  article {
    max-width: 200px;
  }
  .card1 {
    background-color: var(---pink-100);
  }

  .card2 {
    background-color: var(---green-100);
    color: var(---text-color);
  }
</style>
