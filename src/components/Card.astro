---
import "../styles/generel.css";
const { data } = Astro.props;
---

<a href=`singleview/${data.slug}`>
  <article class="grid">
    <img src={"portraet/" + data.image} alt={"Image of " + data.name} />
    <div>
      <h3>{data.name + " " + data.land}</h3>
      <!-- <p>{data.genre}</p> -->

      {
        data.genre && (
          <ul>
            {data.genre.map((item) => {
              return <li class={item}> {item}</li>;
            })}
          </ul>
        )
      }
    </div>
  </article>
</a>

<style>
  article {
    width: 300px;
    color: var(---text-color);
    margin: 0 auto 2rem;
    background-color: var(---blue-60);
    height: 270px;
    border-radius: 10px;
  }

  article img {
    border-radius: 10px 10px 0 0;
    height: 180px;
    margin-bottom: 1rem;
  }

  h3 {
    padding-left: 5px;
    font-size: var(--font-size-h3-mobile);
  }

  p {
    padding-left: 5px;
    font-size: var(--font-size-p);
  }
  a {
    text-decoration: none;
  }

  ul li {
    list-style: none;
    color: var(---text-color);
    padding-left: 10px;
  }
</style>
