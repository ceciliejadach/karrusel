<style>
  .hero {
    font-family: rye;
    color: var(---text-color);
    font-size: 2rem;
    text-align: center;
    margin: 70px 0;
  }

  .hero :first-child {
    font-size: 4rem;
  }

  .hero :nth-child(2),
  .hero :nth-child(3) {
    font-size: var(--font-size-h1-mobile);
    color: rgba(255, 255, 255, 0.735);
  }
  a {
    color: var(---text-color);
  }

  a:hover {
    color: var(---green-100);
  }

  iframe {
    margin: 50px auto;
    max-width: 550px;
    height: 315px;
  }

  .view_lineup {
    text-align: center;
    font-size: var(--font-size-h3-mobile);
  }

  .video {
    background-color: var(---background-color);
    margin: 50px 0;
  }

  @media (min-width: 550px) {
    .hero {
      margin: 200px 0;
    }
    .hero :first-child {
      font-size: 5rem;
    }
    .video {
      padding: 50px 0;
    }
  }
  @media (min-width: 800px) {
    .artist {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    }

    .view_lineup {
      font-size: var(--font-size-h2-desktop);
      margin: 100px 0;
    }

    .hero h1 {
      font-size: 3.5rem;
    }
  }
</style>

